html
  background: BACKGROUND
  color: FOREGROUND
  font: 400 14px "Karla", sans-serif

h1, h2, h3, h4, h5
  font-smoothing: antialiased
  font-weight: bold
  margin: 0
  margin-bottom: 0.5em

h1
  font-size: 5em

h2
  font-size: 3.0em

h3
  font-size: 2.0em

h4
  font-size: 1.5em

h5
  font-size: 1.14em

p
  font-smoothing: antialiased

a
  color: MAIN_HIGHLIGHT

img
  &:not([src]),
  &[src=""]
    background-stripes: lighten(MAIN_HIGHLIGHT, 20%) darken(SECOND_HIGHLIGHT, 20%) 1em
